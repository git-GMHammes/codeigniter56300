# Disable directory browsing
Options -Indexes

# ----------------------------------------------------------------------
# CORS headers (adicionado)
# ----------------------------------------------------------------------
<IfModule mod_headers.c>
	# Ajuste o origin conforme o endereço do frontend (dev/produção)
	Header always set Access-Control-Allow-Origin "http://localhost:56300"
	Header always set Access-Control-Allow-Methods "GET, POST, OPTIONS, PUT, DELETE"
	Header always set Access-Control-Allow-Headers "Origin, X-Requested-With, Content-Type, Accept, Authorization"
	# Se sua API usa cookies/credentials mantenha true (e não use "*")
	Header always set Access-Control-Allow-Credentials "true"
	# Evita caches compartilhados que sirvam a mesma resposta para origens diferentes
	Header always append Vary Origin
	# Opcional: permite manter preflight cache por 1 dia
	Header always set Access-Control-Max-Age "86400"
</IfModule>

# ----------------------------------------------------------------------
# Rewrite engine
# ----------------------------------------------------------------------

# Turning on the rewrite engine is necessary for the following rules and features.
# FollowSymLinks must be enabled for this to work.
<IfModule mod_rewrite.c>
	Options +FollowSymlinks
	RewriteEngine On

  # Responda 200 a preflight OPTIONS (deve vir ANTES das regras que roteiam)
  RewriteCond %{REQUEST_METHOD} =OPTIONS
  RewriteRule ^ - [R=200,L]

	# Checks to see if the user is attempting to access a valid file,
	# such as an image or css document, if this isn't true it sends the
	# request to the front controller, index.php
	RewriteCond %{REQUEST_FILENAME} !-f
	RewriteCond %{REQUEST_FILENAME} !-d
	RewriteRule ^(.*)$ index.php/$1 [L,NC,QSA]

	# Ensure Authorization header is passed along
	RewriteCond %{HTTP:Authorization} .
	RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]
</IfModule>

<IfModule !mod_rewrite.c>
	# If we don't have mod_rewrite installed, all 404's
	# can be sent to index.php, and everything works as normal.
	ErrorDocument 404 index.php
</IfModule>

# Disable server signature start
ServerSignature Off
# Disable server signature end
